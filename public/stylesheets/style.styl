@import "mixins/css3"
@import "mixins/radius"
@import "nib"

/* Reset
Based on http //meyerweb.com/eric/thoughts/2008/01/15/resetting-again/
Removed elements not supported in HTML5
-----------------------------------------------------------------------------*/
html, body, div, span, object, iframe,
h1, h2, h3, h4, h5, h6, p, blockquote, pre,
a, abbr, address, cite, code,
del, dfn, em, img, ins, kbd, q, samp,
small, strike, strong, sub, sup, var,
b, i,
dl, dt, dd, ol, ul, li,
fieldset, form, label, legend,
table, caption, tbody, tfoot, thead, tr, th, td 
  margin 0
  padding 0
  border 0
  outline 0
  font-size 100%
  vertical-align baseline
  
/* Trigger the new block level elements in to the correct content flow
-----------------------------------------------------------------------------*/
article, aside, dialog, figure, 
footer, header, hgroup, menu, 
nav, section  
  display block 
      
/* Setup variables
-----------------------------------------------------------------------------*/
//text sizes
extra-large= 4em
large= 1.4em
med= 1.0em
small= 0.7em

//basic colors
black= #000
white= #fff
dark-gray= #1e1e1e
light-gray= #E8E8E8
gray= #A0A0A0
red= #C44D58

//palette - http //www.colourlovers.com/palette/2056942/Fiji
slate= #556270
teal= #4ECDC4
green= #BEFF47
pink= #ff399f
violet= #9663FF
blue= #0018A0

//font names
helveticaneue= 'Helvetica Neue'
helvetica= 'Helvetica'

/* Typography
-----------------------------------------------------------------------------*/
@import "partials/typography"

/* Local mixins
-----------------------------------------------------------------------------*/
non-decorative-border()
  background dark-gray
  margin 0.25em auto
  padding 0.5em
  border 0.1em double lighten(dark-gray, 10%)
  border-radius 0.5em
  box-shadow 1px 2px 2px rgba(0, 0, 0, 0.75)

decorative-border()
  non-decorative-border()
  &:focus
    border-color pink
    transition all 0.5s
  &:hover
    border-color pink
    transition all 0.5s
  
/* Set up document
-----------------------------------------------------------------------------*/
body
  font 62.5%/1.5  helvetica
  text-align center
  background dark-gray

::selection
  background pink
::-moz-selection
  background pink

.clear-all
  clear both

/* Header
-----------------------------------------------------------------------------*/
header
   padding 10px
   
/* Logo
-----------------------------------------------------------------------------*/
header
  .logo
    background url("../img/logo.png") no-repeat left
    width 43px
    height 43px    
  .logo-text
    position absolute
    left 60px
    top 10px
    font extra-large helveticaneue
    .pink
      color pink
    .green
      color green
  ul.nav
    margin-left 46px
    li
      display inline
      float left
      padding 0.25em 0.5em
      font-size large
      cursor pointer
      color light-gray
      transition all 0.35s ease-out   
      &:hover
        color pink
        transition all 0.35s ease-out   
      &.active
        color green


/* Browse Pages
-----------------------------------------------------------------------------*/
section#projects, section#devices, section#controls
  margin 3em auto
  width 90%
  text-align center
  project, device, control
    position relative
    display inline-block
    decorative-border()
    margin 0.5em !important
    border-radius 0px !important
    overflow hidden
    cursor pointer
    width 30%
    max-width 450px
    img
      width 100%
      height auto
    .caption
      position absolute
      left 0px
      bottom 0px
      height 0px
      width 100%
      color light-gray
      background-color dark-gray
      opacity 0
      transition all 0.5s ease
      h2
        padding-top 0.5em
    &:hover .caption
      opacity 0.75
      height 25%
      min-height 35px
      transition all 0.5s ease
   
/* New Project Page
-----------------------------------------------------------------------------*/        
div.box
  margin 0 auto
  width 50%
  position relative
  top 2em
  
/* Form Styling
-----------------------------------------------------------------------------*/  
form
  h1, label
    color light-gray    
  h1
    padding 0.5em 0 0.5em 0.5em
    border-bottom 0.025em pink dashed
  label
    font-size large  
  input, textarea, .file-container, select
    color light-gray
    font-family "Helvetica"
    width 80%
    outline none
    resize none
    padding 0.5em 0.75em
    margin 0.5em
    decorative-border()
    &.hidden
      display none
    &.default
      font-style italic
      color lighten(@color, 50%)    
  input[type="button"], input[type="submit"], .file-button
    padding 0.5em 0.75em
    margin 0.5em
    background green
    cursor pointer
    border-radius 0.5em
    font-weight 700
    width auto
    color dark-gray
    border 0.10em green solid
    &:hover
      border-color pink
      transition all 0.5s
    &.hidden
      display none
  .file-container
    &:hover
      non-decorative-border()
    .file-label
      font-size large
      width 85%
      text-align left
      display inline-block
    .file-button
      width 10%
      display inline-block
  #gridCreator
    margin 1em
    cursor pointer
    .grid-block
      user-select none
      margin 0.25em 0.35em !important
      non-decorative-border()
      transition all 0.5s ease
      &:hover
        decorative-border()
      &.active
        background-color pink
        transition all 0.5s ease
  select
    padding-right 18px
    background dark-gray
    color light-gray
    display inline-block
    -webkit-appearance none 
    cursor pointer 
    option
      background dark-gray
      color light-gray         
  label.select 
    position relative
    &:after
      content '<>'
      font medium "Consolas", monospace
      color green
      transform rotate(90deg)
      position absolute
      right 4px 
      top -0.15em
      padding 0 0 2px
      pointer-events none
      border-bottom 1px solid  pink   
        
/* New Control form
-----------------------------------------------------------------------------*/
input.variant
  width 50%
select.variant
  width 15%
  margin-left 0.5em
  
/* Grid Plugin
-----------------------------------------------------------------------------*/
.grid-block
  width 50px
  height 50px
  display inline-block
  border gray 1px solid